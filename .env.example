# ===============================================================
# Enterprise Integration Hub - Variables de Entorno
# ===============================================================

# --- Shared Context Server ---
SCS_API_KEY=your-scs-api-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ENCRYPTION_KEY=your-jwt-encryption-key-here
SCS_DB_PASSWORD=scs_secure_password_here

# --- Microsoft 365 ---
MS365_TENANT_ID=your-tenant-id-here
MS365_CLIENT_ID=your-client-id-here
MS365_CLIENT_SECRET=your-client-secret-here
MS365_REDIRECT_URI=http://localhost:8080/callback
MS365_SCOPE=https://graph.microsoft.com/.default

# --- GitHub Enterprise ---
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_ENTERPRISE_URL=https://github.yourcompany.com
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----

# --- Notion ---
NOTION_TOKEN=secret_your-notion-integration-token
NOTION_DATABASE_ID=your-notion-database-id
NOTION_KNOWLEDGE_BASE_ID=your-knowledge-base-id
NOTION_TASKS_DATABASE_ID=your-tasks-database-id

# --- n8n ---
N8N_USER=admin
N8N_PASSWORD=secure_n8n_password_here
N8N_DB_PASSWORD=n8n_secure_password_here
N8N_API_KEY=your-n8n-api-key-here
N8N_ENCRYPTION_KEY=your-n8n-encryption-key

# --- Grafana ---
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password_here

# --- API Gateway y SSL ---
DOMAIN_NAME=yourcompany.com
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# --- External APIs ---
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
JIRA_API_TOKEN=your-jira-api-token
JIRA_URL=https://yourcompany.atlassian.net
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret

# --- Monitoring y Logs ---
LOG_LEVEL=INFO
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=elastic_password_here

# --- Redis Configuration ---
REDIS_PASSWORD=redis_secure_password_here

# --- Security ---
ALLOWED_ORIGINS=http://localhost:3000,https://yourcompany.com
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# --- Business Configuration ---
COMPANY_NAME=Your Company
TIMEZONE=America/New_York
DEFAULT_LANGUAGE=en
WORKING_HOURS_START=09:00
WORKING_HOURS_END=18:00

# --- Backup Configuration ---
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# --- Development/Debug ---
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
ENABLE_HOT_RELOAD=true